BEGIN preprocess
void foo() {}
PREPROCESS
EXPECT_TEXT
#extern function foo
#line 1
void foo() {}
END


BEGIN valid #line directive
#line 7
int x;
PREPROCESS
EXPECT_TEXT
#line 7
#extern variable x
#line 7
int x;
END


BEGIN valid #line directive with path
#line 7 "foo.h"
int x;
PREPROCESS
EXPECT_TEXT
#line 7 "foo.h"
#extern variable x
#line 7
int x;
END


BEGIN valid #line directive with path with escape sequence
#line 7 "\\foo.h"
int x;
PREPROCESS
EXPECT_TEXT
#line 7 "\\foo.h"
#extern variable x
#line 7
int x;
END


BEGIN combines #line directives
#line 6
#line 7
int x;
PREPROCESS
EXPECT_TEXT
#line 7
#extern variable x
#line 7
int x;
END


BEGIN valid #include directive
#include "a.h"
 int x;
PREPROCESS
FILE "a.h"
  extern int x;
EXPECT_TEXT

 #extern variable x
#line 1 3 "a.h"
extern int x;
#line 2 2 ""
int x;
END


BEGIN valid system #include directive
#include <a.h>
 int x;
PREPROCESS
FILE <a.h>
  extern int x;
EXPECT_TEXT

 #extern variable x
#line 1 3 "a.h"
extern int x;
#line 2 2 ""
int x;
END


BEGIN #include directive with no filename
#include
int x;
PREPROCESS
EXPECT_MESSAGE
:1:9: error unexpected token in directive
EXPECT_TEXT

#extern variable x
#line 2
int x;
END


BEGIN #include directive with invalid filename
#include 7
int x;
PREPROCESS
EXPECT_MESSAGE
:1:10: error unexpected token in directive
EXPECT_TEXT

#extern variable x
#line 2
