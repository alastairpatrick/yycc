END


BEGIN #include directive with superfluous tokens
#include "a.h""
int x;
PREPROCESS
FILE "a.h"
extern int x;
EXPECT_MESSAGE
:1:15: error unexpected token in directive
EXPECT_TEXT

#extern variable x
#line 1 "a.h"
extern int x;
#line 2 ""
int x;
END


BEGIN #include directive with missing file
#include "a.h"
int x;
PREPROCESS
EXPECT_MESSAGE
:1:10: error cannot read file "a.h"
EXPECT_TEXT

#extern variable x
#line 2
int x;
END


BEGIN nested #include directives
#include "a.h"
int x;
PREPROCESS
FILE "a.h"
#include "b.h"
FILE "b.h"
extern int x;
EXPECT_TEXT

#extern variable x
#line 1 "b.h"
extern int x;
#line 2 ""
int x;
END


BEGIN #include directive with backslash in filename
#include "c:\a.h"
 int x;
PREPROCESS
FILE "c:\a.h"
  extern int x;
EXPECT_TEXT

 #extern variable x
#line 1 3 "c:\\a.h"
extern int x;
#line 2 2 ""
int x;
END
