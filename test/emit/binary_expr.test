BEGIN Integer addition
int f(int x) {
    return x + 1;
}
EXPECT_IR
define i32 @f(i32 %0) {
entry:
  %x = alloca i32, align 4
  store i32 %0, ptr %x, align 4
  %1 = load i32, ptr %x, align 4
  %2 = add i32 %1, 1
  ret i32 %2
}
END


